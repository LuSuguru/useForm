{
  "name": "@yt/use-form",
  "version": "1.1.12",
  "description": "useForm",
  "main": "es/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "node script/build.js",
    "watch": "node script/build.js --watch",
    "type": "tsc --skipDefaultLibCheck",
    "prepublishOnly": "yarn build",
    "push-patch": "npm version patch && ytnpm publish",
    "push-minor": "npm version minor && ytnpm publish",
    "push-major": "npm version major && ytnpm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LuSuguru/useForm.git"
  },
  "keywords": [
    "useForm"
  ],
  "author": "芦杰",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.15",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "chalk": "^2.4.2",
    "core-js": "2",
    "csstype": "^2.6.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "koa-compose": "^4.1.0",
    "ora": "^3.2.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rollup": "^1.26.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.1.0",
    "tslib": "^1.9.3",
    "typescript": "^3.6.4",
    "yargs": "^13.2.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": ".*\\.test\\.js$",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/components/**/*.{js}"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  }
}
